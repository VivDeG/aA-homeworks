<section>
  <h2>Sign In</h2>

  <%= render "shared/errors" %>

  <form action="<%= session_url %>" method="post">
    <%= auth_token %>

    <label for="email">Email 
    <input
      type="text"
      name="user[email]"
      id="email">
    </label>
      
    <br>

    <label for="password">Password 
    <input
      type="text"
      name="user[password]"
      id="password">
    </label>

    <br>

    <input type="submit" value="Sign in">
  </form>
</section>